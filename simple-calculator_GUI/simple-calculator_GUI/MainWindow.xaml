<Window x:Class="simple_calculator_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:simple_calculator_GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" VerticalAlignment="Top" Height="145">
            <StackPanel x:Name="Selects" Orientation="Horizontal" Margin="1,1,1,1">
                <TextBlock Text="Calculate Type: " VerticalAlignment="Center" FontSize="22"/>
                <ComboBox x:Name="CB_Type" Width="250" FontSize="22"/>
            </StackPanel>
            <StackPanel x:Name="Shows" Orientation="Horizontal" Margin="1,1,1,1">
                <TextBlock x:Name="Shell" Text=">>" Width="800" Height="150" FontSize="22"/>
            </StackPanel>
            
        </StackPanel>

        <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
            <TextBox x:Name="TB_Input" Text="text" FontSize="22"/>
        </StackPanel>
    </Grid>
</Window>
